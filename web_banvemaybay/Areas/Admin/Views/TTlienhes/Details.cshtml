@model web_banvemaybay.Models.TTlienhe

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}


<div class="p15">

    <h2>Chi tiết</h2><br />
    <h4>Thông tin liên hệ</h4>
    <hr />
    <dl class="dl-horizontal p15">
        <dt>
            Họ và tên: @Html.DisplayFor(model => model.FullName)
        </dt>

        <dt>
            Email: @Html.DisplayFor(model => model.Email)
        </dt>

        <dt>
            Số điện thoại: @Html.DisplayFor(model => model.Phone)
        </dt>


    </dl>
    <p class="p15">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.IDlienhe }, new { style = "background-color: #0077cc; color: white; padding: 5px 10px; text-decoration: none; border-radius: 5px;" }) |
        @Html.ActionLink("Quay lại", "Index", null, new { style = "background-color: #0077cc; color: white; padding: 5px 10px; text-decoration: none; border-radius: 5px;" })

    </p>
</div>
