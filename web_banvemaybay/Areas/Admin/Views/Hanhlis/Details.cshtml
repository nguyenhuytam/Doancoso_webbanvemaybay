@model web_banvemaybay.Models.Hanhli

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}



<div class="p15">
    <h2>Chi tiết</h2><br />
    <h4>Hành lí</h4>
    <hr />
    <dl class="dl-horizontal p15">
        <dt>
            Số hành lý(Kg) @Html.DisplayFor(model => model.Kg)
        </dt>
        <dt>
            Giá tiền: @String.Format("{0:0,0}", int.Parse(@Html.DisplayFor(model => model.Giatien).ToString()))đ
        </dt>
    </dl>

    <p class="p15">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.IDhanhli }, new { style = "background-color: #0077cc; color: white; padding: 5px 10px; text-decoration: none; border-radius: 5px;" }) |
        @Html.ActionLink("Quay lại", "Index", null, new { style = "background-color: #0077cc; color: white; padding: 5px 10px; text-decoration: none; border-radius: 5px;" })

    </p>
</div>

