@model web_banvemaybay.Models.Dattruoc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
   
<div class="form-horizontal p15">
    <h2>Thêm mới</h2><br />
    <h4>Đặt trước</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Ngày đặt
        <div class="col-md-10">
            @Html.EditorFor(model => model.NgayDat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Tình trạng
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tinhtrang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tinhtrang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        ID tài khoản
        <div class="col-md-10">
            @Html.DropDownList("IDtaikhoan", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDtaikhoan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm mới" class="btn btn-default" style="background-color: #0077cc; color: white; padding: 5px 10px; border: none; border-radius: 5px;" />
        </div>
    </div>
    <div class="p15">
        @Html.ActionLink("Quay lại", "Index", null, new { style = "background-color: #0077cc; color: white; padding: 5px 10px; text-decoration: none; border-radius: 5px;" })
    </div>
</div>
}


