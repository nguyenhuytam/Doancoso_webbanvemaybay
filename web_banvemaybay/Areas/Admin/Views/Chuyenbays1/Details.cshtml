@model web_banvemaybay.Models.Chuyenbay

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}
<div class="p15">
    <h2>Chi tiết</h2><br />
    <h4>Chuyến bay</h4>
    <hr />
    <dl class="dl-horizontal p15">
        <dt>
            Điểm đi: @Html.DisplayFor(model => model.Diadiemdi)
        </dt>

        <dt>
            Điểm đến: @Html.DisplayFor(model => model.Diadiemden)
        </dt>

        <dt>
            Ngày đi: @Html.DisplayFor(model => model.Ngaydi)
        </dt>

        <dt>
            Ngày về: @Html.DisplayFor(model => model.Ngayve)
        </dt>

        <dt>
            Giá tiền: @Html.DisplayFor(model => model.Giatien)
        </dt>
        <dt>
            Hạng phổ thông: @Html.DisplayFor(model => model.PhoThong)
        </dt>

        <dt>
            Hạng thương gia: @Html.DisplayFor(model => model.ThuongGia)
        </dt>
        <dt>
            Hãng hàng không: @Html.DisplayFor(model => model.HangHK.TenHang)
        </dt>
    </dl>
    <p class="p15">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.IDchuyenbay }, new { style = "background-color: #0077cc; color: white; padding: 5px 10px; text-decoration: none; border-radius: 5px;" }) |
        @Html.ActionLink("Quay lại", "Index", null, new { style = "background-color: #0077cc; color: white; padding: 5px 10px; text-decoration: none; border-radius: 5px;" })

    </p>
</div>