                                            <option value="2" @(hanhliid == 2 ? "selected" : "")>10kg</option>
                                            <option value="3" @(hanhliid == 3 ? "selected" : "")>20kg</option>
                                            <option value="4" @(hanhliid == 4 ? "selected" : "")>30kg</option>
                                        }
                                    </select>
                                </li>
                            }
                        }
