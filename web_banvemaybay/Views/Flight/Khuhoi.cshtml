                        var buttons = document.getElementsByClassName('btn-number-p');
                        // Duyệt qua từng button và ngăn chặn sự kiện click của chúng
                        for (var i = 0; i < buttons.length; i++) {
                            buttons[i].addEventListener('click', function (e) {
                                e.preventDefault();
                            });
                        }
                    </script>

                </div>
            </div>
        }
    </div>
</div>
