@model web_banvemaybay.Models.HangHK

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal p15">
    <h2>Thêm mới</h2><br />
    <h4>Hãng hàng không</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Tên hãng
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenHang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenHang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Hình ảnh
        <div class="col-md-10">
            @Html.EditorFor(model => model.Hinhanh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Hinhanh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-dark" />
        </div>
    </div>
    <div class="p15">
        @Html.ActionLink("Quay lại", "Index")
    </div>
</div>
}


