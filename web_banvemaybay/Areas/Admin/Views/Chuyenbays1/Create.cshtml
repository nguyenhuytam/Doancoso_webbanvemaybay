            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" style="background-color: #0077cc; color: white; padding: 5px 10px; border: none; border-radius: 5px;" />
            </div>
        </div>
        <div class="p15">
            @Html.ActionLink("Quay lại", "Index", null, new { style = "background-color: #0077cc; color: white; padding: 5px 10px; text-decoration: none; border-radius: 5px;" })
        </div>
        <br /><br />

    </div>
