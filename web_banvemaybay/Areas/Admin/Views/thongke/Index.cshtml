@model List<web_banvemaybay.Models.Doanhthu>
@{
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}
<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Tổng doanh năm @Session["NamDuocChon"]</h1>
        <div class="row">
            <div class="col-xl-6" style="width: 100%; margin: auto;">
                <div class="card mb-4">
                    <div class="card-header">
                        @using (Html.BeginForm("Index", "thongke", FormMethod.Post, new { id = "flightForm" }))
                        {
                            <div style="display: flex; align-items: center;">
                                <label for="monthYear" style="margin-right:5px">Thống kê doanh thu :</label>
                                <input class="in-date" type="number" name="monthYear" id="monthYear" placeholder="Nhập năm muốn tra !">
                                <input type="submit" value="Thống kê theo năm" class="btn btn-dark" />
                            </div>

                        }
                    </div>
                    <div class="card-body">
                        <ul class="chart">
                            @foreach (var item in Model)
                            {
                                <li>
                                    <span class="top">@String.Format("{0:0,0}", @item.doanhthu)đ</span>
                                    <span style="height: calc( @item.doanhthu% /2000000) " title="Tháng @item.thang"></span>
                                </li>

                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>