@model web_banvemaybay.Models.Chuyenbay

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal p15">
    <h2>Thêm mới</h2>
    <br />
    <h4>Chuyến bay</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Điểm đi
        <div class="col-md-10">
            @Html.EditorFor(model => model.Diadiemdi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Diadiemdi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Điểm đến
        <div class="col-md-10">
            @Html.EditorFor(model => model.Diadiemden, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Diadiemden, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ngày đi
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ngaydi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ngaydi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ngày về
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ngayve, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ngayve, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Giá tiền
        <div class="col-md-10">
            @Html.EditorFor(model => model.Giatien, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Giatien, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Hãng hàng không
        <div class="col-md-10">
            @Html.DropDownList("IDhang", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDhang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm mới" class="btn btn-dark" />
        </div>
    </div>
    <div class="p15">
        @Html.ActionLink("Quay lại", "Index", null, new { style = "color: #0077cc;" })
    </div>
</div>
}


